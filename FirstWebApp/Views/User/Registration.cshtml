@model FirstWebApp.Models.User

@{
    ViewData["Title"] = "Registration";
}

<h1>Registration</h1>

<form asp-controller="user" asp-action="registration" method="post">
    <p>
        <label asp-for="Username"> Benutzername </label>
        <input type="text" asp-for="Username" />
    </p>
    <p>
        <label asp-for="Password"> Password </label>
        <input type="password" asp-for="Password" />
    </p>
    <p>
        <label asp-for="Email"> Email </label>
        <input type="email" asp-for="Email" />
    </p>
    <p>
        <label asp-for="Birthdate"> Email </label>
        <input type="date" asp-for="Birthdate" />
    </p>
    <p>
        <label asp-for="Gender"> Geschlecht </label>
        <select asp-for="Gender">
            <option value="0">männlich</option>
            <option value="1">weiblich</option>
            <option value="2" selected>nicht angegeben</option>
        </select>
    <p>
        <input type="submit" value="absenden" />
        <input type="reset" value="abbrechen" />
    </p>

    </p>
</form>