@model List<FirstWebApp.Models.Article>

@{
    ViewData["Title"] = "Shop";

}

<h1>Shop</h1>

@if (Model != null && Model.Count >= 1)
{
    <table>
        <thead>
            <tr>
                <td>Artikelnummer</td>
                <td>Artikelname</td>
                <td>Hersteller</td>
                <td>Erscheinungsdatum</td>
            </tr>
        </thead>
        <tbody>
            @foreach (Article a in Model)
            {
                <tr>
                    <td>@a.ArticleID</td>
                    <td>@a.ArticleName</td>
                    <td>@a.Brand</td>
                    <td>@a.ReleaseDate.ToLongDateString()</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4">UnserShopsortiment</td>
            </tr>
        </tfoot>
    </table>
} else {
    <p>
        keine Artikel vorhanden
    </p>
}